{
  "name": "Irys Token Devbox",
  "description": "LayerZero OFT token development environment",
  "packages": [
    "nodejs@20",
    "pnpm@10",
    "foundry@latest",
    "python@3.11",
    "git@2.42",
    "curl@8.4",
    "jq@1.7",
    "gh@2.40",
    "python311Packages.slither-analyzer@latest",
    "python311Packages.pip@latest",
    "graphviz@latest",
    "pre-commit@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Setting up LayerZero OFT development environment...'",
      "node --version && echo 'Node.js ready'",
      "pnpm --version && echo 'pnpm ready'", 
      "forge --version && echo 'Foundry ready'",
      "python3 --version && echo 'Python ready'",
      "echo 'Installing dependencies...'",
      "pnpm install",
      "echo 'Setup complete! Remember to create .env file for deployment keys.'"
    ],
    "scripts": {
      "build": "pnpm run compile",
      "compile": "pnpm run compile:forge && pnpm run compile:hardhat",
      "compile:forge": "forge build",
      "compile:hardhat": "hardhat compile",
      "test": "pnpm run test:forge && pnpm run test:hardhat",
      "test:forge": "forge test",
      "test:hardhat": "hardhat test",
      "lint": "pnpm run lint:js && pnpm run lint:sol",
      "lint:fix": "pnpm run lint:fix",
      "clean": "pnpm run clean"
    }
  },
  "env": {
    "NODE_ENV": "development",
    "HARDHAT_NETWORK": "localhost"
  }
}
